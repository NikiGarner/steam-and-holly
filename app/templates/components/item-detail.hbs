<div class="row">
  <div class="col-md-4 featured-img">
    <img src="{{item.image}}">
  </div>
  <div class="col-md-6">
    <h2>{{item.name}}</h2>
    $ {{item.cost}}
    <br>
    {{item.details}}
    <br>
    {{item.category}}
    <div class="add-to">
      <button class="btn btn-sm btn-primary" {{action 'addToCart' item}}>Add to Cart</button>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h3>Comments</h3>
    {{#each item.feedbacks as |feedback|}}
      {{comment-detail feedback=feedback}}
    {{/each}}
    {{#if formDisplay}}
      {{comment-new save="save" item=item}}
      {{else}}
      <button {{action 'showCommentForm'}}>Add New Comment</button>
    {{/if}}
  </div>
</div>
