<h4>New Comment</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="rating">Rate the item</label>
            {{#x-select value=rating}}
              {{#x-option value=1}}*{{/x-option}}
              {{#x-option value=2}}**{{/x-option}}
              {{#x-option value=3}}***{{/x-option}}
              {{#x-option value=4}}****{{/x-option}}
              {{#x-option value=4}}*****{{/x-option}}
            {{/x-select}}
        </div>
        <div class="form-group">
          <label for="content">Your Name</label>
          {{input value=user id="user"}}
        </div>
        <div class="form-group">
          <label for="message">Message</label>
          {{textarea value=message id="message"}}
        </div>
        <button {{action 'save' item}}>Save</button>
      </form>
    </div>
